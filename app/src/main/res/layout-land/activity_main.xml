<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >

        <TextView
            android:id="@+id/status_class_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="182dp"
            android:text="@string/status_class1"
            app:layout_constraintEnd_toStartOf="@+id/switch_class1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/status_class_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="182dp"
            android:text="@string/status_class2"
            app:layout_constraintEnd_toStartOf="@+id/switch_class2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/status_class_1" />

        <TextView
            android:id="@+id/status_class_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="182dp"
            android:text="@string/status_class3"
            app:layout_constraintEnd_toStartOf="@+id/switch_class3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/status_class_2" />

        <TextView
            android:id="@+id/status_class_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="182dp"
            android:text="@string/status_class4"
            app:layout_constraintEnd_toStartOf="@+id/switch_class4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/status_class_3" />

        <TextView
            android:id="@+id/status_class_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="182dp"
            android:text="@string/status_class5"
            app:layout_constraintEnd_toStartOf="@+id/switch_class5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/status_class_4" />

        <EditText
            android:id="@+id/edit_class1"
            android:layout_width="147dp"
            android:layout_height="51dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:ems="10"
            android:hint="@string/class_default"
            android:inputType="numberDecimal"
            android:text="@string/empty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edit_class2"
            android:layout_width="148dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="50dp"
            android:ems="10"
            android:hint="@string/class_default"
            android:inputType="numberDecimal"
            android:text="@string/empty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_class1" />

        <EditText
            android:id="@+id/edit_class3"
            android:layout_width="147dp"
            android:layout_height="53dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="50dp"
            android:ems="10"
            android:hint="@string/class_default"
            android:inputType="numberDecimal"
            android:text="@string/empty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_class2" />

        <EditText
            android:id="@+id/edit_class4"
            android:layout_width="148dp"
            android:layout_height="47dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="50dp"
            android:ems="10"
            android:hint="@string/class_default"
            android:inputType="numberDecimal"
            android:text="@string/empty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_class3" />

        <EditText
            android:id="@+id/edit_class5"
            android:layout_width="147dp"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="50dp"
            android:ems="10"
            android:hint="@string/class_default"
            android:inputType="numberDecimal"
            android:text="@string/empty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_class4" />

        <Button
            android:id="@+id/button_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:onClick="calcTotal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.471"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switch_class5" />

        <Switch
            android:id="@+id/switch_class1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="150dp"
            android:textOn="@string/switch_on"
            android:textOff="@string/switch_off"
            android:text="@string/switch_label"

            android:onClick="switchChanged"
            app:layout_constraintEnd_toStartOf="@+id/edit_class1"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/switch_class2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="150dp"
            android:textOn="@string/switch_on"
            android:textOff="@string/switch_off"
            android:text="@string/switch_label"

            android:onClick="switchChanged"
            app:layout_constraintEnd_toStartOf="@+id/edit_class2"
            app:layout_constraintTop_toBottomOf="@+id/switch_class1" />

        <Switch
            android:id="@+id/switch_class3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="150dp"
            android:textOn="@string/switch_on"
            android:textOff="@string/switch_off"
            android:text="@string/switch_label"

            android:onClick="switchChanged"
            app:layout_constraintEnd_toStartOf="@+id/edit_class3"
            app:layout_constraintTop_toBottomOf="@+id/switch_class2" />

        <Switch
            android:id="@+id/switch_class4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="150dp"
            android:textOn="@string/switch_on"
            android:textOff="@string/switch_off"
            android:text="@string/switch_label"

            android:onClick="switchChanged"
            app:layout_constraintEnd_toStartOf="@+id/edit_class4"
            app:layout_constraintTop_toBottomOf="@+id/switch_class3" />

        <Switch
            android:id="@+id/switch_class5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="150dp"
            android:textOn="@string/switch_on"
            android:textOff="@string/switch_off"
            android:text="@string/switch_label"

            android:onClick="switchChanged"
            app:layout_constraintEnd_toStartOf="@+id/edit_class5"
            app:layout_constraintTop_toBottomOf="@+id/switch_class4" />

        <TextView
            android:id="@+id/textView_total"
            android:layout_width="363dp"
            android:layout_height="37dp"
            android:layout_marginTop="60dp"
            android:text="@string/empty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_main" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>